@using MvcDbStok.Models.Entity
@model List<TblUrunler>
@{
    ViewBag.Title = "UrunListesi";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>Urun Id</th>
            <th>Urun Adı</th>
            <th>Urun Markası</th>
            <th>Urun Kategori</th>
            <th>Urun Fiyat</th>
            <th>Urun Stok</th>
            <th>Urun Sil</th>
            <th>Urun Guncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var urn in Model)
        {
            <tr>
                <th>@urn.UrunId</th>
                <td>@urn.UrunAd</td>
                <td>@urn.UrunMarka</td>
                <td>@urn.TblKategoriler.KategoriAd</td>
                <td>@urn.UrunFiyat</td>
                <td>@urn.UrunStok</td>
                <td><a href="/Urun/Sil/@urn.UrunId" class="btn btn-danger">Sil</a></td>
                <td><a href="/Urun/UrunGetir/@urn.UrunId" class="btn btn-success">Urun Guncelle</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Urun/UrunEkle/" class="btn btn-primary">Urun Ekle</a>

<script type="text/javascript" src="https://cdn.datatables.net/v/bs-3.3.7/jq-2.2.4/jszip-3.1.3/pdfmake-0.1.27/dt-1.10.15/b-1.3.1/b-colvis-1.3.1/b-flash-1.3.1/b-html5-1.3.1/b-print-1.3.1/r-2.1.1/sc-1.4.2/se-1.2.2/datatables.min.js"></script>
<link href="~/Content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />
<script>
    $('#tbl1').DataTable();
</script>