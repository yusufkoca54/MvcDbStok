@using MvcDbStok.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TblKategoriler>
@{
    ViewBag.Title = "KategoriListesi";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Kategori Id</th>
        <th>Kategori Adı</th>
        <th>Kategori Sil</th>
        <th>Kategori Guncelle</th>
    </tr>
    <tbody>
         @foreach(var ktgr in Model)
            {
                <tr>
                    <th>@ktgr.KategoriId</th>
                    <td>@ktgr.KategoriAd</td>
                    <td><a href="/Kategori/Sil/@ktgr.KategoriId" class="btn btn-danger">Sil</a></td>
                    <td><a href="/Kategori/KategoriGetir/@ktgr.KategoriId" class="btn btn-success">Guncelle</a></td>
                </tr>
            }
    </tbody>
</table>

@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("KategoriListesi", new {sayfa}))

<a href="/Kategori/KategoriEkle/" class="btn btn-primary">Kategori Ekle</a>

